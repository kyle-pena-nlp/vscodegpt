{
  "name": "vscode-gpt",
  "displayName": "vscode-gpt",
  "description": "A project-aware, goal-based way to write code with ChatGPT",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.76.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-gpt.suggestGoals",
        "title": "Suggest Goals"
      },
      {
        "command": "stopAIassistantCommand",
        "title": "Stop AI from background working on project"        
      },
      {
        "command": "startAIassistantCommand",
        "title": "Start AI from background working on project"        
      },
      {
        "command": "pickModelCommand",
        "title": "Pick model"        
      }
    ],
    "configuration": {
      "type": "object",
      "title": "vscode-gpt",
      "properties": {
        "vscode-gpt.apiKey": {
          "type": "string",
          "default": "",
          "description": "Your API key for ChatGPT (See: https://platform.openai.com/account/api-keys)"
        },
        "vscode-gpt.AI_goals": {
          "type": "array",
          "default": [],
          "description": "Goals for your workspace"
        },
        "vscode-gpt.AI_deny_read_patterns": {
          "type": "array",
          "default": [],
          "description": "Files and directories that AI is NOT permitted to read"
        },
        "vscode-gpt.AI_allow_read_patterns": {
          "type": "array",
          "default": [],
          "description": "Files and directories that AI is permitted to read"
        },
        "vscode-gpt.AI_deny_write_patterns": {
          "type": "array",
          "default": [],
          "description": "Files and directories that AI is permitted to write to"
        },
        "vscode-gpt.AI_allow_write_patterns": {
          "type": "array",
          "default": [],
          "description": "Files and directories that AI is NOT permitted to write to"
        },
        "vscode-gpt.first_run": {
          "type": "boolean",
          "default": true,
          "description": "Has the first-time initialization completed?"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.76.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vscode/test-electron": "^2.2.3",
    "directory-tree": "^3.5.1",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "minimatch": "^7.4.3",
    "mocha": "^10.2.0",
    "openai": "^3.2.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "openai": "^3.2.1"
  }
}
